{
  "name": "crust-webapp-admin",
  "description": "Admin WebApp",
  "private": true,
  "version": "2020.06.0",
  "license": "Apache-2.0",
  "author": "Denis Arh <denis.arh@gmail.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --mode production",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "cdeps": "yarn upgrade corteza-webapp-admin"
  },
  "gitHooks": {
    "pre-commit": "yarn lint"
  },
  "dependencies": {
    "corteza-webapp-admin": "cortezaproject/corteza-webapp-admin.git#2020.06.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-unit-mocha": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "chai": "^4.1.2",
    "node-sass": "4.13.1",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.11"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": null,
      "color-hex-length": null,
      "no-empty-source": null,
      "selector-list-comma-newline-after": null
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
